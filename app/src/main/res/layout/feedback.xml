<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="1">



    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background_lunch">

        <ImageView
            android:id="@+id/backBtn_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/backbtn" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:text="@string/lunch_menue_title_feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_title_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/feedbacktext"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColorHint="@color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/darker_gray"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackbtn"
            android:layout_below="@+id/feedbacktext"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@color/top_bar_background_lunch"
            android:text="@string/lunch_feedback_submint"
            android:textColor="@color/white"
            android:textSize="@dimen/lunch_information_editor_size"/>
    </RelativeLayout>

</LinearLayout>
